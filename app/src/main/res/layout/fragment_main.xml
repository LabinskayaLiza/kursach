<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3E0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment">

    <TextView
        android:id="@+id/login_login"
        android:layout_width="110dp"
        android:layout_height="62dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/koulen"
        android:text="log in"
        android:textColor="#133E87"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="304dp"
        android:layout_height="51dp"
        android:backgroundTint="#608BC1"
        android:fontFamily="@font/koulen"
        android:text="log in"
        android:textColor="#CBDCEB"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:backgroundTint="#608BC1"
        android:ems="10"
        android:fontFamily="@font/koulen"
        android:inputType="text"
        android:text="Password"
        android:textColor="#608BC1"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_user"
        app:layout_constraintVertical_bias="0.109" />

    <EditText
        android:id="@+id/login_user"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:layout_marginTop="230dp"
        android:backgroundTint="#608BC1"
        android:ems="10"
        android:fontFamily="@font/koulen"
        android:inputType="text"
        android:text="Login"
        android:textColor="#608BC1"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/koulen"
        android:text="sign up"
        android:textColor="#608BC1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

</androidx.constraintlayout.widget.ConstraintLayout>