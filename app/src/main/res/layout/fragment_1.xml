<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3E0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Fragment1">

    <EditText
        android:id="@+id/user_password"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="248dp"
        android:backgroundTint="#608BC1"
        android:drawableTint="#608BC1"
        android:ems="10"
        android:fontFamily="@font/koulen"
        android:inputType="text"
        android:text="Password"
        android:textColor="#608BC1"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_login"
        app:layout_constraintVertical_bias="0.0"/>

    <Button
        android:id="@+id/button_signin"
        android:layout_width="304dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#608BC1"
        android:fontFamily="@font/koulen"
        android:text="Sign in"
        android:textColor="#CBDCEB"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_password"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/user_login"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:backgroundTint="#608BC1"
        android:drawableTint="#608BC1"
        android:drawingCacheQuality="auto"
        android:ellipsize="none"
        android:ems="10"
        android:fontFamily="@font/koulen"
        android:foregroundTint="#608BC1"
        android:inputType="text"
        android:text="Login"
        android:textColor="#608BC1"
        android:textColorLink="#608BC1"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:layout_marginTop="230dp"
        android:backgroundTint="#608BC1"
        android:ems="10"
        android:fontFamily="@font/koulen"
        android:foregroundTint="#608BC1"
        android:inputType="text"
        android:text="Name"
        android:textColor="#608BC1"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="133dp"
        android:layout_height="66dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/koulen"
        android:text="Sign up"
        android:textAlignment="center"
        android:textColor="#133E87"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LogIn"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/koulen"
        android:text="log in"
        android:textColor="#608BC1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

</androidx.constraintlayout.widget.ConstraintLayout>